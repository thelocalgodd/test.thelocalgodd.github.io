---
import Tag from "./Tag.astro";

const { title, description, link, tag } = Astro.props;
---

<a href={link}>
  <div
    id="project"
    class="border border-solid border-zinc-600 md:hover:-translate-y-2 hover:border-dashed p-5 w-[250px] my-2 mx-2 rounded-xl flex flex-col">
    <p class="text-zinc-600 mb-2 dark:text-zinc-400">{ title }</p>
    <p class="">{description}</p>

    <Tag name={tag} />
  </div>
</a>
