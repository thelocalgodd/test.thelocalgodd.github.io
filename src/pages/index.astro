---
import Header from '../components/Header.astro'
import ProjectCard from '../components/ProjectCard.astro'
// import SpotifyEmbed from '../components/SpotifyEmbed'
import Footer from '../components/Footer.astro'
import { ViewTransitions } from 'astro:transitions'
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title class="border outline outline-2">Astro</title>
		<ViewTransitions />
	</head>
	<body>
		<Header />

		<section id="welcome" class="flex items-center md:flex md:flex-col-reverse">
			<div id="left" class="border-solid border border-zinc-600 p-5 my-10 mr-20 rounded-xl">
				<p class="text-zinc-600">Welcome, </p>
				<br>
				<p>
					my name is Vincent Kwaku Kpemlie, 
					<br>
					currently a CS major at <a href="https://knust.edu.gh">KNUST, Kumasi.</a>
					<br>
					aspiring to be a cybersecurity 
					<br><br>					
					professional, I am currently learning 
					<br>
					the basics of Cybersecurity
				</p>
			</div>
			<div id="right" class="flex flex-col">
				<img src="/vkkpemlie.jpg" alt="" width="150px" class="border-solid border border-zinc-600 rounded-xl hover:border-0">
				<button class="border border-solid border-zinc-600 mt-2 rounded-xl hover:bg-zinc-600 hover:text-white">
					ðŸ“ƒ resume
				</button>
			</div>
		</section>

		<section id="tools" class="border border-solid border-zinc-600 p-5 rounded-xl my-5">
			<p class="text-zinc-600">Tools / Technologies Used</p>
			<br>
			<p>
				HTML, CSS, Sass, TailwindCSS, Javascript, ReactJS, Astro, NodeJS, Bash, Python, Java, C++, Git, Github, Photoshop, Figma,
			</p>
		</section>

		<section id="featured-projects" class="border border-solid border-zinc-600 p-5 rounded-xl my-5 flex flex-col">
			<p class="text-zinc-600">featured</p>
			<div class="flex">
				<ProjectCard
					title = "thelocalgodd.me 2.0"
					description = "I am redesigning and rebuilding my personal portfolio site from scratch, taking inspo from other sites i have seen."
					link = 'https://github.com/thelocalgodd'
				/>
				<ProjectCard 
					title = "tailwind-auto-script"
					description = "this is a basic bash script I wrote to automate the process of creating a new vite + react project and adding tailwind automatically."
					link = 'https://github.com/thelocalgodd'
				/>
				<ProjectCard 
					title = "KNUST CS Assignments"
					description = "as the title suggests, this is a repo filled with README files and relevant files regarding coding assignments given at KNUST "
					link = "https://github.com/thelocalgodd"
				/>
			</div>

			<p class="my-1">check out more projects <a href="https://github.com/thelocalgodd"><u class="underline-offset-4 hover:text-zinc-600">here</u></a></p>
		</section>

		<Footer />
	</body>
</html>
