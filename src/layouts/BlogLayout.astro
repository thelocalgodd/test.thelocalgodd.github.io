---
import '../styles/style.css'
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle = { `blog | ${frontmatter.title}` }>

		<li class="list-none border border-solid border-l-slate-800 mb-5 flex flex-col justify-between bg-zinc-300 px-3 w-[350px] md:w-auto md:m-5 mx-auto">
			<p>
				{frontmatter.title}
			</p>
			<p class="flex justify-end text-zinc-500">
				{frontmatter.author}
			</p>
		</li>
		<article class="w-[350px] md:w-auto md:mx-5 mx-auto">
			<slot />
		</article>
		<br>
	</body>
</html>
