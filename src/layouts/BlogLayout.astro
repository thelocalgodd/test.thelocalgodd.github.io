---
import "../styles/style.css";
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={`blog | ${frontmatter.title}`}>
  <li
    class="list-none my-5 flex items-center justify-center flex-col md:justify-between rounded-md md:px-2 md:w-[750px] md:mx-auto md:flex-row md:m-5"
  >
    <p
      class="bg-zinc-300 border border-dashed border-slate-900 px-5 rounded-xl dark:bg-zinc-600 dark:border-white"
    >
      {frontmatter.title}
    </p>
    <p class="text-zinc-500 my-2">
      {frontmatter.pubDate}
    </p>
  </li>

  <article class="w-screen px-8 mx-auto md:w-auto">
    <slot />
  </article>
  <br />
</BaseLayout>
